<%= render 'shared/errors', obj: @student %>

<div class="container">
  <div class="row center sign-up-form">
    <div class="col s12 m12 l12">
      <div class="card-panel">
        <h3 class="header"><%= @student.new_record? ? "Sign up" : "Edit your profile" %></h3>
        <div class="row">
          <%= form_for(@student, html: {class: "col s12"}, data: { turbo: false }) do |f| %>

          <div class="row">
            <div class="input-field col s12">
              <%= f.text_field :name, placeholder: "Enter your full name", autofocuse: true %>
              <%= f.label :name, class: "active" %>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s12">
              <%= f.email_field :email, placeholder: "Enter your email address", autofocuse: true %>
              <%= f.label :email, class: "active" %>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s12">
              <%= f.password_field :password, placeholder: "Choose a Password", autofocuse: true %>
              <%= f.label :password, class: "active" %>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <%= f.password_field :password_confirmation, placeholder: "Confirm your password", autofocuse: true %>
              <%= f.label :password, class: "active" %>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <%= f.submit(@student.new_record? ? "Sign up" : "Submit Updates", class: "btn orange waves-effects wave-light right") %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>