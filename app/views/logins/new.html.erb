<div class="container">
  <div class="row center sign-up-form">
    <div class="col s12 m12 l12">
      <div class="card-panel">
        <h3 class="header">Log in </h3>
        <div class="row">
          <%= form_for(:logins, html: {class: "col s12"}, data: { turbo: false }) do |f| %>

          <div class="row">
            <div class="input-field col s12">
              <%= f.email_field :email, placeholder: "Enter your email address", autofocuse: true %>
              <%= f.label :email, class: "active" %>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s12">
              <%= f.password_field :password, placeholder: "Enter your Password" %>
              <%= f.label :password, class: "active" %>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s12">
              <%= f.submit "Log in" , class: "btn orange waves-effects wave-light right" %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>